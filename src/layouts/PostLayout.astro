---
import Layout from "./Layout.astro";
import "katex/dist/katex.min.css";

const { frontmatter } = Astro.props;

//TODO: add scrollbar to side of blog post
---

<Layout title=`Evan Whelan - ${frontmatter.title}`>
    <div class="prose prose-base prose-invert py-10 overflow-x-hidden max-w-none w-full md:h-screen md:no-scrollbar md:overflow-y-auto">
        <h1 class="mb-0">{frontmatter.title}</h1>
        <h4 class="mt-0 mb-8">{frontmatter.date}</h4>
        <slot />
    </div>
</Layout>